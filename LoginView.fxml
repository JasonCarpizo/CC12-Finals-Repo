<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<GridPane alignment="CENTER" hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LoginController">
  <padding>
      <Insets top="25" right="25" bottom="25" left="25"/>
  </padding>
  <TextField fx:id="txtUsername" promptText="Username" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
  <PasswordField fx:id="txtPassword" promptText="Password" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
  <Button fx:id="btnLogin" text="Login" onAction="#handleLogin" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
  <Button fx:id="btnSignUp" text="Sign Up" onAction="#handleSignUp" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
</GridPane>
