<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<GridPane alignment="CENTER" hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SignupController">
  <padding>
      <Insets top="25" right="25" bottom="25" left="25"/>
  </padding>
  <TextField fx:id="txtNewUsername" promptText="Username" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
  <PasswordField fx:id="txtNewPassword" promptText="Password" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
  <Button fx:id="btnCreateAccount" text="Create Account" onAction="#handleCreateAccount" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
</GridPane>
