<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.WithdrawDepositController">
   <Label fx:id="totalMoneyLabel" text="Total Money: $0.00" />
   <TextField fx:id="amountField" promptText="Enter amount" />
   <Button text="Withdraw" onAction="#handleWithdraw" />
   <Button text="Deposit" onAction="#handleDeposit" />
   <Button text="Back" onAction="#handleBack" />
   <ListView fx:id="historyListView" prefHeight="200" />
</VBox>
